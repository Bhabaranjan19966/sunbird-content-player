<theme startStage="splash" id="theme" ver="0.2">
    <manifest>
        <media id="previous" src="icon_previous.png" type="image" />
        <media id="next" src="icon_next.png" type="image" />
        <media id="square" src="square.png" type="image" />
    </manifest>

    <controller name="assessment" type="items" id="assessment"/>

    <stage id="baseStage" preload="true">
		<image asset="previous"/>
		<image asset="next"/>
        <image asset="square"/>
    </stage>

    <template id="org.ekstep.mcq.ia_ta.ia_ta5">
        <text align="center" color="black" font="Verdana" fontsize="50" model="item.title" valign="middle" w="80" x="10" y="10"/>
        <text align="center" color="black" font="Verdana" fontsize="60" model="item.question" valign="middle" w="80" x="10" y="22"/>
        <shape h="12" hitArea="true" id="retry" type="rect" visible="true" w="80" x="10" y="17">
            <event type="click">
                <action asset_model="item.question_audio" command="play" type="command"/>
            </event>
        </shape>

        <image h="35" model="item.question_image" x="40" y="32">
        </image>

        <mcq model="item" multi_select="false">
            <options cols="5" h="25" layout="table" padX="5" padY="10" marginX="5" marginY="5" options="options" stroke="black " w="80" x="10" y="70">
                <image w="60" h="60" stretch="false" align="center" valign="middle" model="option.value.image" x="10" y="5"/>
                <text align="center" font="Georgia" fontsize="1.6em" h="100" model="option.value.text" valign="middle" w="100" weight="bold" x="0" y="0"/>
                <event type="click">
                    <action asset_model="option.value.audio" command="play" type="command"/>
                </event>
            </options>
        </mcq>
    </template>

    <template id="org.ekstep.mcq.ia_ta.ia_ta2r">
        <text align="center" color="black" font="Verdana" fontsize="50" model="item.title" valign="middle" w="80" x="10" y="10"/>
        <text align="center" color="black" font="Verdana" fontsize="60" model="item.question" valign="middle" w="80" x="10" y="22"/>
        <shape h="12" hitArea="true" id="retry" type="rect" visible="true" w="80" x="10" y="17">
            <event type="click">
                <action asset_model="item.question_audio" command="play" type="command"/>
            </event>
        </shape>

        <image h="35" model="item.question_image" x="40" y="32">
        </image>

        <mcq model="item" multi_select="false">
            <options rows="2" h="25" layout="table" marginX="5" marginY="5" padX="2" options="options" stroke="black " w="97" x="1.5" y="70">
                <image w="80" h="80" align="left" valign="middle" stretch="false" model="option.value.image" x="10" y="5"/>
                <text align="left" font="Georgia" fontsize="1.3em" h="100" model="option.value.text" valign="middle" w="80" weight="bold" x="20" y="0"/>
                <event type="click">
                    <action asset_model="option.value.audio" command="play" type="command"/>
                </event>
            </options>
        </mcq>
    </template>

	<template id="mcq_template_1">
		<shape x="0" y="14" w="100" h="100" type="rect" fill="#FFF16E" />
        <text model="item.title" x="9" y="7" w="86" h="4" font="Georgia" fontsize="52"/>
        <mcq multi_select="false" model="item" shadow = "#FF0000">
            <options layout="table" x="30" y="20" w="40" h="50" cols="1" marginX="2" marginY="5" padY="10" padX="30" options="options"/>
        </mcq>
    </template>
	<template id="mcq_template_2">
		<shape x="0" y="14" w="100" h="100" type="rect" fill="#FFF16E" />
        <text model="item.title" x="9" y="7" w="86" h="4" font="Georgia" fontsize="52"/>
        <mcq multi_select="false" model="item" shadow = "#FF0000">
            <options layout="table" x="30" y="20" w="40" h="60" cols="1" marginX="2" marginY="5" padY="10" padX="30" options="options"/>
        </mcq>
    </template>

	<template id="mcq_template_3">
		<shape x="0" y="14" w="100" h="100" type="rect" fill="#FFF16E" />
        <text model="item.title" x="9" y="7" w="86" h="4" font="Georgia" fontsize="52"/>
        <mcq multi_select="false" model="item" shadow = "#FF0000">
            <options layout="table" x="30" y="20" w="40" h="70" cols="1" marginX="2" marginY="5" padY="10" padX="30" options="options"/>
        </mcq>
    </template>



    <stage id="splash" x="0" y="0" w="100" h="100">
        <param name="next" value="scene15"/>
        <audio asset="scene_audio" />
        <audio asset="delayed_intro_audio" />
        <image asset="next" x="92" y="80" w="6" h="10" id="next"/>
        <shape id="nextContainer" type="rect" x="87" y="75" w="13" h="20" visible="false" hitArea="true">
            <event type="click">
                <action type="command" command="transitionTo" asset="theme" param="next" effect="scroll" direction="left" ease="linear" duration="500" />
            </event>
        </shape>
        <text align="center" font="Georgia" fontsize="60" h="40" valign="middle" w="40" weight="bold" x="30" y="20">
            Test For Item Rendering
        </text>
    </stage>


	<stage id="scene15" x="0" y="0" w="100" h="100" iterate="assessment" var="item">
        <param name="next" value="endScreen" />
        <param name="previous" value="splash" />
		<audio asset="ws_1_audio"/>
		<audio asset="ws_2_audio"/>
		<audio asset="ws_4_audio"/>
		<audio asset="ws_5_audio"/>
		<audio asset="ws_6_audio"/>
		<audio asset="ws_7_audio"/>
		<audio asset="ws_8_audio"/>
        <image asset="next" x="93" y="3" w="5" h="8.3" id="next" visible="false"/>
        <image asset="previous" x="2" y="3" w="5" h="8.3" id="previous" visible="false"/>


		<shape id="hint_audio" type="rect" x="5" y="15" w="20" h="30" visible="false" hitArea="true">

		</shape>
		<shape id="nextContainer" type="rect" x="90" y="1" w="10" h="15" visible="false" hitArea="true">
            <event type="click" disableTelemetry="true">
				<action type="command" command="stop" asset_model="item.title_audio.asset" />
                <action type="command" command="eval" asset="scene15" success="next_item" failure="next_item"/>
            </event>
        </shape>

		<shape id="previousContainer" type="rect" x="1" y="1" w="10" h="15" visible="false" hitArea="true">
            <event type="click">
				<action type="command" command="stop" asset_model="item.title_audio.asset" />
                <action type="command" command="transitionTo" asset="theme" param="previous" effect="scroll" direction="right" ease="linear" duration="500" transitionType="previous"/>
            </event>
        </shape>

		<audio asset="Q1_audio" />


        <embed template="item" var-item="item"/>

        <appEvents list="next_item"/>
        <events>
            <event type="enter">
                <action type="command" command="play" asset_model="item.title_audio.asset" loop="1" />
            </event>
            <event type="exit">
                <action type="command" command="stop" asset_model="item.title_audio.asset" />
            </event>
            <event type="next_item">
                <action type="command" command="transitionTo" asset="theme" param="next" effect="scroll" direction="left" ease="linear" duration="500" />
            </event>
        </events>
    </stage>

	<stage id="endScreen" x="0" y="0" w="100" h="100">
        <shape x="2" y="2" w="96" h="10.5" type="rect" fill="#FFF16E" />
        <shape x="2" y="12" w="96" h="89.5" type="rect" fill="#FFF16E" />
        <text x="38" y="15" w="30" h="8" font="Georgia" fontsize="96">
            Thank you
        </text>

        <image asset="icon_reload" x="30" y="35" w="15" h="20" />
        <text x="33" y="57" w="15" h="5" font="Arial" fontsize="48">
            Replay
        </text>
        <shape type="rect" x="30" y="35" w="15" h="30" hitArea="true">
            <event type="click">
                <action type="command" command="restart" asset="theme"/>
            </event>
        </shape>

        <image asset="icon_home" x="55" y="35" w="15" h="20" />
        <text x="58" y="57" w="15" h="5" font="Arial" fontsize="48">
            Home
        </text>
        <shape type="rect" x="55" y="35" w="15" h="30" hitArea="true">
            <event type="click">
                <action type="command" command="windowEvent" asset="theme" href="#/content/list"/>
            </event>
        </shape>

        <image asset="publisher_logo" x="5" y="75" w="13" h="17" />
        <image asset="level_band" x="5" y="94" w="13" h="5" />
        <text x="35" y="80" w="35" h="5" font="Arial" fontsize="48">
            The Moon And The Cap
        </text>
        <text x="35" y="86" w="20" h="5" font="Georgia" weight="bold" fontsize="28">
            Author:
        </text>
        <text x="41" y="86" w="20" h="5" font="Georgia" fontsize="28">
            Rohini Nilekani
        </text>
        <text x="35" y="90" w="20" h="5" font="Georgia" weight="bold" fontsize="28">
            Illustrator:
        </text>
        <text x="43.5" y="90" w="20" h="5" font="Georgia" fontsize="28">
            Angie &amp; Upesh
        </text>
        <text x="43.5" y="90" w="20" h="5" font="Georgia" fontsize="28">
            Angie &amp; Upesh
        </text>

    </stage>
</theme>
