    <stage id="page4" x="0" y="0" w="100" h="100">
        <audio asset="stage_sound" />
        <audio asset="cheers_sound" />

        <param name="score" value="100" scope="stage"/>
        <param name="incr" value="10" scope="stage"/>

        <text id="scoretxt" x="80" y="5"   h="20" w="20" z-index="100" fontsize="100" font="Arial" param="score" color="black" shadow="white" outline="2"/>
        <text id="incrtext" x="85" y="110" h="20" w="20" z-index="100" fontsize="60" font="Arial" param="incr"  color="white" shadow="black" outline="2"/>

        <shape type="roundrect" z-index="100" shadow="black" x="10" y="10" h="10" w="10" fill="red">
            <event type="click">
                <action type="command" command="play" asset="cheers_sound" loop="1" />
                <action type="animation" asset="incrtext">
                    <tween>
                        <to ease="quadOut" duration="0"><![CDATA[{"x":85,"y":20}]]></to>
                        <to ease="bounceOut" duration="1000"><![CDATA[{"x":85,"y":90}]]></to>
                        <to ease="quadOut" duration="0"><![CDATA[{"x":85,"y":110}]]></to>
                    </tween>
                </action>
                <action type="command" command="set" param="score" param-increment="10" asset="page4"/>
                <action type="command" command="refresh" asset="scoretxt"/>
            </event>
        </shape>

        <shape id="bottom-left" x="-35" y="135" w="200" h="200" type="rect" fill="#FDA51A" rotate="-135" shadow="black">
            <event type="click">
                <action type="animation" asset="bottom-left"><tween><to ease="quadOut" duration="500"><![CDATA[{"x":-35,"y":135}]]></to></tween></action>
                <action type="command" command="transitionTo" effect="fadein" asset="theme" value="splash" duration="10" delay="500"/>
            </event>
